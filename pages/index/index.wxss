.spell-card-info {
  width: 100%;
  display: flex;
  flex-direction: row;
  position: relative;
}

.spell-card-img {
  width: 250rpx;
}

.spell-card-desc {
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding-left: 20rpx;
}
.spell-card-features{
  position: absolute;
  right: 0;
  bottom: 5px;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 12px;
  color: orange;
}

.spell-card-name {
  font-size: 15px;
}

.spell-card-grade {
  font-size: 15px;
  margin-top: 10px;
}

.card-course-title {
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #ccc;
  padding: 20px 0;
}

.card-word-collect {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 20px 0;
  align-items: center;
  border-bottom: 1px solid #ccc;
  font-size: 14px;
}

.kind-list {
  width: 100%;
}

.weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.weui-flex__item {
  margin-left: 10px;
  flex: 1;
  font-family: 'Times New Roman';
}

.weui-cells {
  margin-top: 0;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
  transition: transform 0.3s, opacity 0;
  -webkit-transition: 0.3s;
}

.weui-cells:after, .weui-cells:before {
  display: none;
}

.weui-cells_show {
  -webkit-transform: translateY(0);
  transform: translateY(0);
}

.weui-cell:before {
  right: 15px;
}

.kind-list__item {
  background-color: #fff;
  border-radius: 2px;
  overflow: hidden;
  border-bottom: 1px solid #ccc;
}

.kind-list__item:first-child {
  margin-top: 0;
}

.kind-list__img {
  width: 15px;
  height: 15px;
}

.kind-list__item-hd {
  padding: 20px 0;
  opacity: 1;
}

.kind-list__item-hd_locked {
  opacity: 0.4;
}

.kind-list__item-bd {
  height: 0;
  overflow: hidden;
}

.kind-list__item-bd_show {
  height: auto;
}

.weui-cell_access {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #ccc;
}

.weui-cell_access:last-child {
  border: none;
}

.weui-cell_access:first-child {
  padding-top: 0;
}

.weui-cell__bd {
  flex: 1;
  font-family: 'Times New Roman';
}

.img-fuc{
  width: 44rpx;
  height: 44rpx;
  margin-left: 10rpx;
}


