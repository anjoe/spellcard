page {
  width: 100%;
  height: 100%;
  background-color: #f4f4f4;
}

.page-container {
  position: relative;
  width: 100%;
  height: 100%;
  background: url('https://zr.sste.com/web_resources/spell_card/exercise/exercise-bg.png') no-repeat;
  background-position: bottom left;
  background-size: contain;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.exercise-number {
  position: absolute;
  top: 20px;
  left: 40rpx;
  font-size: 12px;
}

.add-word-area {
  position: absolute;
  top: 17px;
  right: 40rpx;
  font-size: 12px;
  color: #feb467;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.exercise-answer-area {
  margin-top: 70px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.exercise-answer-item {
  width: 550rpx;
  height: 60px;
  line-height: 60px;
  text-align: center;
  border: 1px solid #d7d7d7;
  border-radius: 50px;
  margin-top: 20px;
  font-family: 'Times New Roman';
  font-size: 22px;
}

.bg-color-normal {
  background-color: #fff;
}

.bg-color-true {
  background-color: #48db89;
  color: #fff;
}

.bg-color-false {
  background-color: #fc6c80;
  color: #fff;
}

.exercise-action-area {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 2vh;
}

.input-item {
  width: 20px;
  height: 25px;
  text-align: center;
  box-sizing: border-box;
}

.no-input {
  border-bottom: 2px solid #999;
  margin-left: 3px;
}

.input-item:first-child {
  margin-left: 0;
}

.input-area {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.exercise-tip {
  font-size: 12px;
  margin-top: 5px;
}

.color-normal {
  color: #999;
  font-family: 'Times New Roman';
}

.color-true {
  color: #48db89;
  font-family: 'Times New Roman';
}

.color-false {
  color: #fc6c80;
  font-family: 'Times New Roman';
}

.letter-click-area {
  width: 75vw;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  margin-top: 5vh;
}

.letter-click-item {
  box-sizing: border-box;
  padding: 1vw;
  flex: 0 0 20%;
}

.letter-click {
  border: 1px solid #aaa;
  border-radius: 10px;
  box-sizing: border-box;
  width: 100%;
  height: 15vw;
  text-align: center;
  line-height: 15vw;
}

.true-answer-area {
  display: flex;
  align-items: center;
  text-align: center;
  color: #f8b0ba;
  border: 1px solid #f8b0ba;
  border-radius: 40px;
  padding: 1vh 2vw;
  margin-top: 4vh;
  font-size: 16px;
}
