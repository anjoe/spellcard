/**app.wxss**/

page {
  margin: 0;
  padding: 0;
}

image {
  width: 100%;
}

.container {
  height: 100%;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  padding: 0 40rpx;
}

.click-scale {
  transform: scale(0.9);
  transition: transform 0.2s;
}

.click-scale-2 {
  transform: scale(0.98);
  transition: transform 0.2s;
}

.click-scale-3 {
  transform: scale(0.9);
}
